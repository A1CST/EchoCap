{
  "manifest_version": 3,
  "name": "EchoCap",
  "version": "1.2",
  "description": "Record audio from the current tab, auto-click play, and stop when the song changes.",
  "permissions": ["tabCapture", "downloads", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" },
  "icons": {
  "128": "icon.png"
}
}
